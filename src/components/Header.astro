    .menu-toggle.active span:nth-child(1) { transform: translateY(9px) rotate(45deg); }
    .menu-toggle.active span:nth-child(2) { opacity: 0; transform: translateX(-10px); }
    .menu-toggle.active span:nth-child(3) { transform: translateY(-9px) rotate(-45deg); }
  }
</style>

<script type="module" is:client>
  const toggle = document.querySelector('.menu-toggle');
  const nav = document.querySelector('.nav-links');
  const navLinks = document.querySelectorAll('.nav-link');

  // --- 1. Lógica del Menú Móvil ---
  if (toggle && nav) {
    toggle.addEventListener('click', (e) => {
      e.stopPropagation();
      const isActive = nav.classList.contains('active');
      toggleMenu(!isActive);
    });

    document.addEventListener('click', (e) => {
      if (nav.classList.contains('active') && !nav.contains(e.target) && !toggle.contains(e.target)) {
        toggleMenu(false);
      }
    });

    // Ahora incluimos también el botón de acción móvil para que cierre el menú al hacer click
    const allLinks = nav.querySelectorAll('a');
    allLinks.forEach(link => {
      link.addEventListener('click', () => toggleMenu(false));
    });
  }

  function toggleMenu(open) {
    if (open) {
      toggle.classList.add('active');
      nav.classList.add('active');
      toggle.setAttribute('aria-expanded', 'true');
    } else {
      toggle.classList.remove('active');
      nav.classList.remove('active');
      toggle.setAttribute('aria-expanded', 'false');
    }
  }

  // --- 2. Lógica ScrollSpy ---
  // Nota: Esto solo funcionará cuando estemos en la página principal ('/')
  // Si estamos en /contacto, este código no encontrará las secciones y no hará nada (lo cual es correcto)
  const sections = document.querySelectorAll('section[id]');

  if (sections.length > 0) {
    const observerOptions = {
      threshold: 0,
      rootMargin: "-20% 0px -80% 0px" 
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          navLinks.forEach(link => link.classList.remove('active'));
          const id = entry.target.getAttribute('id');
          // Ajustamos el selector para que coincida con href="/#id"
          const activeLink = document.querySelector(`.nav-links a[href="/#${id}"]`);
          if (activeLink) activeLink.classList.add('active');
        }
      });
    }, observerOptions);

    sections.forEach(section => observer.observe(section));
  }
</script>