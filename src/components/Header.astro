    position: relative;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-accent);
    opacity: 1;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 100%;
    height: 2px;
    background-color: var(--color-accent);
    transition: transform 0.3s ease;
    border-radius: 2px;
  }

  .nav-links a.active::after {
