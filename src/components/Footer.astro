<style>
  :root {
    --color-accent: #00E599;
    --font-primary: 'Satoshi', sans-serif;
    --font-extended: 'Chaney Extended', sans-serif;
  }

  .footer-section {
    background-color: #050505;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
    padding: 4rem 1rem 2rem;
    position: relative;
    z-index: 999;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center; /* Alineado verticalmente al centro */
    gap: 2rem;
    padding-bottom: 3rem;
  }

  /* --- MARCA --- */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-width: 300px;
  }

  .footer-logo {
    font-family: var(--font-extended);
    font-size: 1.5rem;
    color: #fff;
    text-decoration: none;
    letter-spacing: 0.5px;
  }

  .brand-tagline {
    font-family: var(--font-primary);
    color: #888;
    font-size: 0.9rem;
    margin: 0;
  }

  /* --- NAVEGACIÓN --- */
  .footer-nav {
    display: flex;
    gap: 2rem;
  }

  .footer-nav a {
    color: #ccc;
    text-decoration: none;
    font-family: var(--font-primary);
    font-size: 0.95rem;
    transition: color 0.3s;
  }

  .footer-nav a:hover {
    color: var(--color-accent);
  }

  /* --- REDES SOCIALES --- */
  .footer-social {
    display: flex;
    flex-direction: column;
    align-items: flex-end; /* Alineado a la derecha */
    gap: 0.5rem;
  }

  .social-label {
    font-family: var(--font-primary);
    font-size: 0.8rem;
    text-transform: uppercase;
    color: #555;
    letter-spacing: 1px;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .icon-link {
    color: #fff;
    transition: transform 0.3s ease, color 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255,255,255,0.05);
    padding: 0.6rem;
    border-radius: 50%;
  }

  .icon-link:hover {
    color: var(--color-accent);
    transform: translateY(-3px);
    background: rgba(0, 229, 153, 0.1);
  }

  /* --- BARRA INFERIOR --- */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding-top: 2rem;
    text-align: center;
  }

  .footer-bottom p {
    font-family: var(--font-primary);
    font-size: 0.85rem;
    color: #555;
    margin: 0;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      text-align: center;
      gap: 2.5rem;
    }

    .footer-brand {
      align-items: center;
    }

    .footer-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-social {
      align-items: center;
    }
  }
</style>